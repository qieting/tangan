<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2eded"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/line1"
        android:background="#ffffff"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/line2"
        android:layout_height="63dp">
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/post_rela"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/post_under"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:background="@drawable/start1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_under"
            android:layout_centerHorizontal="true"
            android:text="首页"
            android:textSize="11dp" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/guanxuetang_rela"
            android:layout_width="90dp"
            android:layout_height="58dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/guanxuetang_under"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/post1"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/guanxuetang_under"
                android:layout_centerHorizontal="true"
                android:text="管血糖"
                android:textSize="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/luntan_rela"
            android:layout_width="90dp"
            android:layout_height="58dp"
         android:layout_weight="1"
            android:clickable="true"

            >

            <ImageView
                android:id="@+id/luntan_under"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tea1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/luntan_under"
                android:layout_centerHorizontal="true"
                android:text="糖友汇"
                android:textSize="11dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hotpost_rela"
            android:layout_width="90dp"
            android:layout_height="58dp"

            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/hotpost_under"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/mall1"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotpost_under"
                android:layout_centerHorizontal="true"
                android:text="用药提醒"
                android:textSize="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/i_rela"
            android:layout_width="90dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:clickable="true"


            >

            <ImageView
                android:id="@+id/i_under"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/i1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/i_under"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:text="我"
                android:textSize="11dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>