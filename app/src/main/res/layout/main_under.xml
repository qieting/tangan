<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2eded"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/line1"
        android:background="#ffffff"
        android:orientation="horizontal"></LinearLayout>


    <RelativeLayout
        android:id="@+id/hotpost_rela"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_below="@id/line2"

        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/hotpost_under"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotpost_under"
            android:layout_centerHorizontal="true"
            android:text="提醒"
            android:textSize="11dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/post_rela"
        android:layout_width="90dp"
        android:layout_height="58dp"

        android:layout_below="@id/line2"
        android:layout_toRightOf="@id/luntan_rela"

        android:clickable="true">

        <ImageView
            android:id="@+id/post_under"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_under"
            android:layout_centerHorizontal="true"
            android:text="日常"
            android:textSize="11dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/i_rela"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_below="@id/line2"
        android:layout_toRightOf="@id/hotpost_rela"
        android:clickable="true"


        >

        <ImageView
            android:id="@+id/i_under"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/friends1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/i_under"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:text="亲友"
            android:textSize="11dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/luntan_rela"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_below="@id/line2"
        android:layout_toRightOf="@id/i_rela"
        android:clickable="true"

        >

        <ImageView
            android:id="@+id/luntan_under"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/luntan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/luntan_under"
            android:layout_centerHorizontal="true"
            android:text="论坛"
            android:textSize="11dp" />


    </RelativeLayout>


</RelativeLayout>